{
  "name": "Little-Webpack-Template",
  "version": "1.0.0",
  "description": "A little boilerplate for webpack!",
  "main": "index.js",
  "author": "George Treviranus",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "nyc mocha -r babel-register -r ./testHelpers.js --recursive ./src/**/*.spec.js",
    "test:w": "mocha --watch -r babel-register -r ./testHelpers.js --recursive ./src/**/*.spec.js",
    "build": "webpack --config webpack.prod.js",
    "watch": "webpack-dev-server --config webpack.dev.js --progress --open"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-webpack-aliases": "^1.1.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "chai-enzyme": "^1.0.0-beta.0",
    "chai-spies": "^0.7.1",
    "cheerio": "^1.0.0-rc.2",
    "clean-webpack-plugin": "^0.1.18",
    "compression-webpack-plugin": "^1.1.3",
    "css-loader": "^0.28.7",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "express": "^4.16.2",
    "express-static-gzip": "^0.3.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "jsdom": "^11.5.1",
    "mocha": "^4.0.1",
    "node-sass": "^4.7.2",
    "nyc": "^11.3.0",
    "postcss-loader": "^2.0.9",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.1"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      [
        "babel-plugin-webpack-aliases",
        {
          "config": "./webpack.dev.js"
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/little-webpack-template.git"
  }
}
