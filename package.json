{
  "name": "pulsar",
  "version": "1.3.0",
  "description": "A React boilerplate using Webpack.",
  "main": "index.js",
  "author": "George Treviranus",
  "license": "MIT",
  "private": false,
  "scripts": {
    "watch": "webpack-dev-server --config ./config/webpack.dev.js --progress --open",
    "build": "webpack --config ./config/webpack.prod.js --progress",
    "lint": "prettier --write 'src/**/*.js' && prettier --write 'src/**/*.scss'",
    "test": "mocha -r @babel/register -r ./config/mocha.config.js --recursive './src/**/*.spec.js'",
    "test:w": "mocha --watch -r @babel/register -r ./config/mocha.config.js --recursive './src/**/*.spec.js'"
  },
  "dependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "autoprefixer": "^9.1.3",
    "babel-loader": "^8.0.1",
    "babel-plugin-webpack-aliases": "^1.1.3",
    "chai": "^4.1.2",
    "chai-enzyme": "^1.0.0-beta.1",
    "chai-spies": "^1.0.0",
    "cheerio": "^1.0.0-rc.2",
    "clean-webpack-plugin": "^0.1.18",
    "compression-webpack-plugin": "^2.0.0",
    "copy-webpack-plugin": "^4.5.3",
    "css-loader": "^1.0.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "express": "^4.16.2",
    "express-static-gzip": "^1.1.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.1.0",
    "jsdom": "^12.0.0",
    "mini-css-extract-plugin": "^0.4.3",
    "mocha": "^5.0.5",
    "node-sass": "^4.9.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.14.3",
    "react-router-dom": "^4.2.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/pulsar.git"
  }
}
