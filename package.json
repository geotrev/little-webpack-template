{
  "name": "pulsar",
  "version": "1.0.2",
  "description": "A React boilerplate using Webpack.",
  "main": "index.js",
  "author": "George Treviranus",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "nyc mocha -r @babel/register -r ./config/testHelpers.js --recursive ./src/**/*.spec.js",
    "test:w": "mocha --watch -r @babel/register -r ./config/testHelpers.js --recursive ./src/**/*.spec.js",
    "build": "webpack --config ./config/webpack.prod.js",
    "watch": "webpack-dev-server --config ./config/webpack.dev.js --progress --open"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "autoprefixer": "^9.1.3",
    "babel-loader": "^8.0.1",
    "babel-plugin-webpack-aliases": "^1.1.3",
    "chai": "^4.1.2",
    "chai-enzyme": "^1.0.0-beta.0",
    "chai-spies": "^1.0.0",
    "cheerio": "^1.0.0-rc.2",
    "clean-webpack-plugin": "^0.1.18",
    "compression-webpack-plugin": "^1.1.11",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "express": "^4.16.2",
    "express-static-gzip": "^1.1.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.1.0",
    "jsdom": "^12.0.0",
    "mocha": "^5.0.5",
    "node-sass": "^4.9.3",
    "nyc": "^13.0.1",
    "postcss-loader": "^3.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "babel-plugin-webpack-aliases",
        {
          "config": "./config/webpack.dev.js"
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/pulsar.git"
  }
}
